{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "commonjs": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "globals": {},
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [".", "./src"]
      }
    }
  },
  "rules": {
    "quotes": [2, "single"],
    "no-var": "error"
  }
}
